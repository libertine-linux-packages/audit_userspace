init_audit_userspace_control_start()
{
	rm -rf /etc/audit/audit.rules
	
	taskset 0x00000001 augenrules --load
}

init_audit_userspace_control_main()
{
	if [ "$#" -eq 0 ]; then
		local action='status'
	else
		local action="$1"
		shift 1
	fi
	
	case "$action" in
		
		start)
			init_audit_userspace_control_start "$@"
		;;
		
	esac
}

init_audit_userspace_control_main "$@"
